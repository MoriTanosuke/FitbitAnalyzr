<h1>Listing foods</h1>

<%= render :partial => 'foods-graph', :local => {:foods => @foods, :series => @series} %>

<%= will_paginate @foods %>

<table>
  <tr>
    <th>date</th>
    <th>caloriesIn</th>
    <th>water</th>
    <th>carbs</th>
    <th>protein</th>
    <th>fat</th>
    <th>fiber</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%= food.date %></td>
    <td><%= food.caloriesIn %></td>
    <td><%= food.water %></td>
    <td><%= food.carbs %></td>
    <td><%= food.protein %></td>
    <td><%= food.fat %></td>
    <td><%= food.fiber %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Clear all', { :controller => 'foods', :action => 'clear' }, :confirm => 'Are you sure?'  %>
<%= link_to 'Import Food', new_food_path %>
